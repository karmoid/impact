<div class="row">
	<div class="span12 new_sub_item">
		<div class="form-horizontal well">
			<%= form_for [category, sub_category, deployment], :html => {:class => "edit-item"}, :remote => true, :action => deployment.id.blank? ? "create" : "update"  do |f| %>
				<fieldset>
					<legend><%= deployment.id.blank? ? "Nouveau déploiement" : "Modification du déploiement #{deployment.name}"%></legend>
					<div class="control-group">
						<label class="control-label" for="input01">Code</label>
						<div class="controls">
							<%= f.text_field :name, :class => "input-xlarge" %></br>
							<p class="help-block">Ce code mnémonique est plus pratique que le nom complet.</p>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="input01">Nom</label>
						<div class="controls">
							<%= f.text_field :hr, :class => "input-xlarge" %></br>
							<p class="help-block">Description courte.</p>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="textarea">Description longue</label>
						<div class="controls">
							<%= f.text_area :note, :class => "input-xlarge" %>
						</div>
					</div>
					<div class="validation-error"></div>
					<div class="form-actions">
						<%= f.submit "Valider", :class => "btn btn-primary", :id => "new-item" %>
						<%= link_to "Annuler", deployment.id.blank? ? [category, sub_category, Deployment] : [category, sub_category, deployment], :remote => true, :class => "btn btn-danger", :data => {:typebtn => "cancel"} %>
					</div>
				</fieldset>
			<% end %>
		</div>
	</div>
</div>