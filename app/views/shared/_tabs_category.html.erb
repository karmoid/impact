<header class="jumbotron subhead" id="overview">
  <%= render :partial => "shared/menu_categories" , :locals => {:categories => categories} %>
  <div class="row">
    <div class="span6">
      <h1><%= category.hr %></h1>
      <p class="lead"><%= category.note %></p>
    </div>
    <div class="span6">
      <div class="well">
          <div class="clearfix"><a href="http://www.brinks.fr" id="bks_aplink">via Bks</a></div>
      </div>
    </div>
  </div>
</header>
<section id="category">
	<div class="page-header">
		<h1>Sous catégories</h1>
	</div>

	<!-- Headings & Paragraph Copy -->
	<ul id="mainTab" class="nav nav-tabs">
		<li class="active"><a href="#home" data-toggle="tab">Sous catégories</a></li>
		<li class="dropdown">
			<a href="#" class="dropdown-toggle" data-toggle="dropdown">Liens <b class="caret"></b></a>
			<ul class="dropdown-menu">
				<li><a href="#dropdown1" data-toggle="tab">@link</a></li>
				<li><a href="#dropdown2" data-toggle="tab">@site</a></li>
			</ul>
		</li>
		<li><%= link_to "Saisie", new_category_sub_category_path(category), :id => "new-form", :remote => true, :data => {:toggle => "tab", :target => "#edit"} %></li>
	</ul>	
</section>
<div id="myTabContent" class="tab-content">
	<div class="tab-pane fade active in" id="home">
		<!-- Headings & Paragraph Copy -->
		<%= render :partial => "shared/tabs_sub_category_list" , :locals => {:category => category} %>
	</div>
	<div class="tab-pane fade" id="edit">
		<div id="new-edit-pane"></div>
	</div>
	<div class="tab-pane fade" id="dropdown1">
		<div id="preview" class="span6">
			<label>Textbox with search icon</label>
			<div class="input-append"><input type="text" id="" name=""><span class="add-on"><i class="icon-search"></i></span></div>

			<label>Textbox with calendar icon</label>
			<div class="input-append"><input type="text" id="" name=""><span class="add-on"><i class="icon-calendar"></i></span></div>

			<label>Textbox for email</label>
			<div class="input-prepend"><span class="add-on"><i class="icon-envelope"></i></span><input type="text" id="" name=""></div>

			<label>Textbox for user name</label>
			<div class="input-prepend"><span class="add-on"><i class="icon-user"></i></span><input type="text" id="" name=""></div>

			<label>Textbox for website</label>
			<div class="input-prepend"><span class="add-on"><i class="icon-globe"></i></span><input type="text" id="" name=""></div>

			<label>Textbox for uploading an image</label>
			<div class="input-prepend input-append"><span class="add-on"><i class="icon-picture"></i></span><input type="text" id="" name=""><button class="btn" type="button">Upload</button>
		</div>
	</div>
