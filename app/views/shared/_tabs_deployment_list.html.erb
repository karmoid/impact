<div id="item-list" class="row">
	<div class="span5">
		<table class="table table-striped table-condensed table-hover">
			<thead>
			  <tr>
				<th>Code</th>
				<th>Nom</th>
			  </tr>
			</thead>
			<tbody id="table-select">
				<% sub_category.deployments.each do |d| %>
					<tr data-linknote="ln-<%= "#{d.id}" %>">
						<td class="auto-hide"><%= d.name.blank? ? d.id : d.name %><%= flag_helper(d) %></td>
						<td><%= d.hr.blank? ? d.name : d.hr  %></td>
					</tr>	
				<% end %>	
			</tbody>
		</table>		
	</div>	
	<div class="span7">
		<ul class="nav nav-tabs">
			<li class="active"><a href="#tab-detail" data-toggle="tab">Section 1</a></li>
			<li class=""><%= link_to "Géré par", hosts_path(-1), :remote => true, :data => {:toggle => "tab", :target => "#tab-host"} %></li>
			<li class=""><%= link_to "Connecté à", conx_path(-1), :remote => true, :data => {:toggle => "tab", :target => "#tab-conx"} %></li>
		</ul>
		<div class="tabbable">
			<div class="tab-content">
			  <div class="tab-pane active" id="tab-detail">
				<div id="note-list" class="span5">
					<%= render :partial => "shared/detail_deployment_show", :collection => sub_category.deployments, :as => :deployment, :locals => {:prefix => "ln"} %>
				</div>
			  </div>
			  <div class="tab-pane" id="tab-host">
				<div class="host-list"></div>
			  </div>
			  <div class="tab-pane" id="tab-conx">
				<div class="conx-list"></div>
			  </div>
			</div>
		</div>	
	</div>	
</div>
