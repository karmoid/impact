<div id="item-list" class="row">
	<div class="span12">
		<table class="table table-striped table-condensed table-hover">
			<thead>
			  <tr>
				<th>Code</th>
				<th>Nom</th>
				<th>Note</th>
			  </tr>
			</thead>
			<tbody id="table-select">
				<% sub_category.deployments.each do |d| %>
					<tr data-linknote="ln-<%= "#{d.id}" %>">
						<td><%= link_to h(d.name.blank? ? d.id : d.name), [d.sub_category.category, d.sub_category, d], :remote => true, :class => "fill-target", :data => {:target => "#main-list"} %><%= flag_helper(d) %></td>
						<td><%= d.hr.blank? ? d.name : d.hr  %></td>
						<td><small><%= d.note %></small></td>
					</tr>	
				<% end %>	
			</tbody>
		</table>		
	</div>	
</div>
